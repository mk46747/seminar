@model NannyApp.Model.NannyOffer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_mytemplate_nanny.cshtml";
}

<div class="form-style-8">
    <h2>Create new offer - giving services</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.City)
                    @Html.EditorFor(model => model.City)
                </td>
                <td>
                    @Html.LabelFor(model => model.Address)
                    @Html.EditorFor(model => model.Address)
                </td>
            </tr>
            </table>
        <table>
            <tr>                
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                            {
                                Text = "Your place",
                                Value = "NANNYS_PLACE"
                            });
                    listItems.Add(new SelectListItem
                            {
                                Text = "Parent's place",
                                Value = "PARENTS_PLACE",
                                Selected = true
                            });                            
                }
                @Html.LabelFor(model => model.BabySittingPlace, "Select babysitting place")
                @Html.DropDownListFor(model => model.BabySittingPlace, listItems, "-- Select --")            
            </tr>
            <br />
            <tr>
                @Html.LabelFor(model => model.ChildrenNumber, "Select max number of children that you can take care for")
            </tr><br />
            <tr>
                @Html.RadioButtonFor(model => model.ChildrenNumber, 1) 1
                @Html.RadioButtonFor(model => model.ChildrenNumber, 2) 2
                @Html.RadioButtonFor(model => model.ChildrenNumber, 3) 3
                @Html.RadioButtonFor(model => model.ChildrenNumber, 4) 4
                @Html.RadioButtonFor(model => model.ChildrenNumber, 5) 5
                @Html.RadioButtonFor(model => model.ChildrenNumber, 6) 6
            </tr>
            <br /><br />
            <tr>
                @Html.LabelFor(model => model.MinChildrenAge, "Select min children age that you can take for")
            </tr>
            <br />
            <tr>
                @Html.RadioButtonFor(model => model.MinChildrenAge, 0) 0
                @Html.RadioButtonFor(model => model.MinChildrenAge, 1) 1
                @Html.RadioButtonFor(model => model.MinChildrenAge, 2) 2
                @Html.RadioButtonFor(model => model.MinChildrenAge, 3) 3
                @Html.RadioButtonFor(model => model.MinChildrenAge, 4) 4
                @Html.RadioButtonFor(model => model.MinChildrenAge, 5) 5
                @Html.RadioButtonFor(model => model.MinChildrenAge, 6) 6
            </tr>
            <br /><br />
            <tr>
                @Html.LabelFor(model => model.MaxChildrenAge, "Select max children age that you can take for")
            </tr>
            <br />
            <tr>
                @Html.RadioButtonFor(model => model.MinChildrenAge, 1) 1
                @Html.RadioButtonFor(model => model.MinChildrenAge, 2) 2
                @Html.RadioButtonFor(model => model.MinChildrenAge, 3) 3
                @Html.RadioButtonFor(model => model.MinChildrenAge, 4) 4
                @Html.RadioButtonFor(model => model.MinChildrenAge, 5) 5
                @Html.RadioButtonFor(model => model.MinChildrenAge, 6) 6
                @Html.RadioButtonFor(model => model.MinChildrenAge, 7) 7
                @Html.RadioButtonFor(model => model.MinChildrenAge, 8) 8
                @Html.RadioButtonFor(model => model.MinChildrenAge, 9) 9
                @Html.RadioButtonFor(model => model.MinChildrenAge, 10) 10
                @Html.RadioButtonFor(model => model.MinChildrenAge, 11) 11
                @Html.RadioButtonFor(model => model.MinChildrenAge, 12) 12
                @Html.RadioButtonFor(model => model.MinChildrenAge, 13) 13
            </tr>
            <br /><br />
           <tr>
                @Html.LabelFor(model => model.Price, "Write price per hour (in $)")
                @Html.EditorFor(model => model.Price)
           </tr>
            <tr>
                @Html.LabelFor(model => model.StartTime, "Select date when you can start")
                @Html.TextBoxFor(model => model.StartTime, new { type = "date" })
            </tr>
            <tr>
                @Html.LabelFor(model => model.EndTime, "Select date until when you can take care for children/s")
                @Html.TextBoxFor(model => model.EndTime, new { type = "date" })
            </tr>
            <tr>
                @Html.LabelFor(model => model.Experience, "Write your experience with taking care for childrens")
                @Html.EditorFor(model => model.Experience)
            </tr>
            <tr>
                @Html.LabelFor(model => model.Notice, "Write notice if you have something to add")
                @Html.EditorFor(model => model.Notice)
            </tr>
            @Html.HiddenFor(model => model.Opened, new { Value = "true" })
            <tr>
                @Html.LabelFor(model => model.Deadline, "Select date until when parents can apply for your offer (DL for your offer)")
                @Html.TextBoxFor(model => model.Deadline, new { type = "date" })
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Create account" /></td>
            </tr>
        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




